{
    "manifest_version": 3,
    "name": "WordWise",
    "version": "2.2.0",
    "description": "Select any word to instantly see its meaning, pronunciation, difficulty level, and real-world examples. Track your vocabulary growth with flashcards, streaks, and gamification.",
    "permissions": [
        "activeTab",
        "storage",
        "unlimitedStorage",
        "scripting",
        "contextMenus",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://api.dictionaryapi.dev/*",
        "https://api.mymemory.translated.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "WordWise"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "define-word": {
            "suggested_key": {
                "default": "Ctrl+Shift+D",
                "mac": "Command+Shift+D"
            },
            "description": "Define selected word"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}